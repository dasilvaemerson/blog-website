<%- include("partials/header"); -%>
<h1>Compose</h1>
<form action="/compose" method="post" autocomplete="off">
    <div class="form-group">
        <label>Title</label>
        <input type="text" name="postTitle" class="form-control">
    </div>
    <div class="form-group">
        <label>Post</label>
        <textarea name="postContent" rows="10" cols="30" class="form-control"></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>


<%- include("partials/footer"); -%>